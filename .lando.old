name: login-auth
recipe: laravel
config:
  php: '8.3'
  composer_version: '2.8.0'
  via: apache:2.4
  webroot: .
  database: mariadb:11.3
  cache: none
  xdebug: true
  services:
    appserver:
      build_as_root:
        - curl -sL https://deb.nodesource.com/setup_20.x | bash -
        - apt-get install -y nodejs
    database:
      portforward: true
    phpmyadmin:
      type: phpmyadmin
